{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "railway-mcp-server",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "packages/railway-mcp-server/Dockerfile",
        "dockerContext": "packages/railway-mcp-server"
      },
      "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    {
      "name": "notion-mcp-server",
